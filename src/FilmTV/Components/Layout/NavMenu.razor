@implements IDisposable

@inject NavigationManager NavigationManager

<MudPaper Width="250px" Class="py-3" Elevation="0">
    <MudNavMenu>
        <AuthorizeView>
            <Authorized>
                <MudNavLink Href="/watchlist">Watchlist</MudNavLink>
                <MudNavLink Href="/add">Add</MudNavLink>
                <MudNavLink Href="/rating">Rating</MudNavLink>
                <MudNavLink Href="/search">Search</MudNavLink>
                <MudNavLink Href="/Account/Manage">@context.User.Identity?.Name</MudNavLink>
                <MudNavLink Href="/Account/Logout">Logout</MudNavLink>
            </Authorized>
        </AuthorizeView>
    </MudNavMenu>
</MudPaper>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}